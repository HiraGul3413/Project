<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ViewProfile"
    tools:showIn="@layout/app_bar_view_profile">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="@drawable/b4"
        android:orientation="vertical"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">
        <TextView
            android:text="Your Profile Information"
            android:textSize="26dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="Username:"
            android:textSize="22dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:id="@+id/nameVP"
            android:text="namegVP"
            android:padding="7dp"
            android:width="330dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@layout/rounded_border"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:text="Email Address:"
            android:textSize="22dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:id="@+id/emailVP"
            android:text="emailgVP"
            android:padding="7dp"
            android:width="330dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@layout/rounded_border"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:text="Phone No:"
            android:textSize="22dp"
            android:textColor="@color/colorPrimary"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textSize="20dp"
            android:fontFamily="monospace"
            android:id="@+id/phoneVP"
            android:text="phonegVP"
            android:padding="7dp"
            android:width="330dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@layout/rounded_border"
            android:layout_width="wrap_content"
            android:layout_height="40dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>